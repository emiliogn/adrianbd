<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Modificar Entrada</h1>

  {{#each tasks}}
  <form action="" method="POST" class="mt-4">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Nombre" name="title" value="{{title}}">

    
      <input type="text"class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white " placeholder="Hora de entrada" name="description" value="{{description}}">

      <input type="text"class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white " placeholder="actividad" name="actividad" value="{{actividad}}">

      <input type="text"class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white " placeholder="Telefono" name="telefono" value="{{telefono}}">

     

    <button type="submit" class="rounded-md bg-red-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-red-600 focus:bg-red-700">Modificar</button>

  </form>
  {{/each}}

</div>